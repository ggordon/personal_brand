- title "Posts"

%table
  %tr
    %th Title
    %th Body
  - for post in @posts
    %tr
      %td= h post.title
      %td= h post.body
      %td= link_to 'Show', post_path(post.id)
      %td= link_to 'Edit', edit_post_path(post.id)
      %td= link_to 'Destroy', post_path(post.id), :confirm => 'Are you sure?', :method => :delete

%p= link_to "New Post", new_post_path
